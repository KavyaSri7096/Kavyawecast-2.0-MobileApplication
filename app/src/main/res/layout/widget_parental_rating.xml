<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="@dimen/standard_half"
        android:layout_marginBottom="@dimen/standard_half"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/blackOverlay80"
            android:orientation="vertical">

            <TextView
                android:id="@+id/code"
                style="@style/TextView.Content.Big.Bold"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/standard_small"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/standard_small"
                android:background="?attr/colorAccent" />

        </LinearLayout>

        <TextView
            style="@style/TextView.Content.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/standard_small"
            android:text="@string/parental_rating"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>
