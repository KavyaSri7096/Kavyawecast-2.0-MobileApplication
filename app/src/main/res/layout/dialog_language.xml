<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="20dp"
            app:realtimeOverlayColor="@color/blackOverlay80" />

        <TextView
            style="@style/TextView.Title.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/standard_double"
            android:text="@string/select_a_language"
            android:textColor="@color/white" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_dividerColor="@color/transparent"
            app:np_selectedTextColor="@color/white"
            app:np_textColor="@color/whiteOverlay80"
            app:np_textSize="@dimen/title_small"
            app:np_wheelItemCount="3" />

        <ImageButton
            android:id="@+id/confirm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/standard_double"
            android:background="@drawable/bg_button_oval"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_check" />

    </RelativeLayout>

</layout>
